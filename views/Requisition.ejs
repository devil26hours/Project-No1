      //get img
      function renderImg() {
            $.ajax({
                  method: 'get',
                  url:'http://localhost:3000/getImg',
                  success: (response) => {
                      
                      console.log('Render Img !', response)
                      if(response.resCode == 200) {
                          dataImg = response.Result;
                          if(dataImg.length > 0) {
                            var html = '';
                            for (let i = 0; i < dataImg.length; i++) {
                              html += `
                              <img class="image" src="${dataImg[i].img}" alt="">
                              
                              `;
                            }   
                            $("#Avatar").html(html)                                          
                        }
                      }
                  }, error:(err) => {
                      console.log('bad', err)
                  }
              }) 
          }

      //save requisition
      function saverequisition() {
          $.ajax({
            method: 'post',
            url:'http://localhost:3000/api/createrequisition',
            data: {
              productnames: $("#productnames").val(),
              total: $("#total").val(),
              detail: $("#detail").val(),
            }, success: (response) => {
                console.log('good', response)
                if(response.resCode == 200) {
                  Swal.fire({
                    icon: 'success',
                    title:'Complete'
                  })
                  render();
                  render2()
                  render3()
                }
            }, error: (err) => {
                console.log('bad', err)
            }
          })
        }

      //get flash
      function render() {
          $.ajax({
                method: 'get',
                url:'http://localhost:3000/api/getallstockflash',
                success: (response) => {
                    
                    console.log('Render Get flash Product !', response)
                    if(response.resCode == 200) {
                        data = response.Result;
                        if(data.length > 0) {
                          var html = '';
