        //confirmed Req
        function confirmReq(pid, index, productnames){
          Swal.fire({
              icon: "warning",
              title: 'ต้องการยืนยันคำร้องขอใช่หรือไม่ '+'?',
              showConfirmButton: true,
              showDenyButton: false,
              showCancelButton: false,
              confirmButtonText: 'ยืนยัน',
              denyButtonText: `deleate`,
          }).then((result) => {
              if (result.isConfirmed) {
                $.ajax({
                  method: 'delete',
                  url: 'http://localhost:3000/api/deletestockrequisition',
                  data: {
                    id: pid
                  }, success: (response) => {
                    console.log('good', response)
                    if(response.resCode == 200) {
                      // Swal.fire('Changes are saved', '', 'success')                     
                    }
                    render();
                    render2()
                    render3()
                    window.location.reload()
                  }, error: (err) =>{
                    console.log('bad', err)
                  }
                })
                $("#modalReq").trigger('click')
              }
          })
        }
        

